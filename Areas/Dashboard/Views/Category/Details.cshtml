@model Category

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold mb-0">
            <i class="bi bi-box-seam me-2 text-primary"></i> Category Details
        </h3>
    </div>
    <form enctype="multipart/form-data" method="post" action="/dashboard/category/update">
        <div class="row g-4 shadow-sm bg-white rounded-3 p-4 mb-3">
            <div class="col-md-7">
                <dl class="row mb-0">
                    <input asp-for="CategoryId" type="hidden" />

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Name</dt>
                    <dd class="col-md-8 col-sm-7"><input asp-for="CategoryName" class="border-0 rounded-2 shadow-sm" required /></dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Description</dt>
                    <dd class="col-md-8 col-sm-7">
                        <textarea asp-for="Description" rows="5" class="border-0 rounded-2 shadow-sm w-100"></textarea>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="text-start">
            <a class="btn btn-secondary" href="/dashboard/category">Cancel</a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </button>
            <button class="btn btn-primary" id="btn-save">Save</button>
        </div>
    </form>

    @if (Model.Products.Count() > 0)
    {
        <div class="card border-0 shadow mt-3">
            <div class="card-header">
                Products
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="table-light">
                        <tr>
                            <th>Product ID</th>
                            <th>Name</th>
                            <th>Supplier</th>
                            <th>Price</th>
                            <th>Manufactured</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr class="product-row" data-id="@product.ProductId">
                                <td>@product.ProductId</td>
                                <td>@product.ProductName</td>
                                <td>@product.Supplier.SupplierName</td>
                                <td>@product.Price</td>
                                <td>@product.DateOfManufacture.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm mt-3 rounded-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            This category doesn't contain any product.
        </div>
    }
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Do you want to delete this category?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-end">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="/dashboard/category/delete/@Model.CategoryId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (TempData["message"] != null)
        {
                        <text>
                        alert('@TempData["message"]');
                        </text>
        }

        $('.product-row').click(function(){
            var id = $(this).data('id')
            window.location.href='/dashboard/product/details/'+ id
        })

        $('.product-row').hover(function(){
            $(this).css('background-color', '#f8f9fa')
        },function(){
            $(this).css('background-color','')
        })
    </script>
}