@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Supplier";
}

<div class="container">
    <div class="text-end m-3">
        <a href="/dashboard/supplier/add" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Supplier
        </a>
    </div>

    <div class="card border-0 shadow">
        <div class="card-header">
            Suppliers
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>Supplier ID</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr class="supplier-row" data-id="@supplier.SupplierId">
                            <td>@supplier.SupplierId</td>
                            <td>@supplier.SupplierName</td>
                            <td>@supplier.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-center">
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item" id="li-@i">
                        <a class="page-link" href="/dashboard/supplier/index/@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $('#li-@ViewBag.CurrentPage').addClass('active');

        $('.supplier-row').hover(function(){
              $(this).css('background-color','#f8f9fa')
         }, function(){
              $(this).css('background-color','')
         });

         $('.supplier-row').on('click', function(){
             var productId = $(this).data('id');

              window.location.href = '/dashboard/supplier/details/' + productId;
         });

          @if (TempData["message"] != null)
          {
              <text>
              alert('@TempData["message"]');
              </text>
          }
    </script>
}