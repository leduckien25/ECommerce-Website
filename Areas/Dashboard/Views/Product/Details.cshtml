@model Product

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold mb-0">
            <i class="bi bi-box-seam me-2 text-primary"></i> Product Details
        </h3>
    </div>
    <form enctype="multipart/form-data" method="post" action="/dashboard/product/update">
        <div class="row g-4 shadow-sm bg-white rounded-3 p-4 mb-3">
            <div class="col-md-7">
                <dl class="row mb-0">
                    <input asp-for="ProductId" type="hidden" />
                    <input asp-for="ImageUrl" type="hidden" />

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Name</dt>
                    <dd class="col-md-8 col-sm-7"><input asp-for="ProductName" class="border-0 rounded-2 shadow-sm" required/></dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Category</dt>
                    <dd class="col-md-8 col-sm-7">
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="border-0 rounded-2 shadow-sm" required>
                        </select>
                    </dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Supplier</dt>
                    <dd class="col-md-8 col-sm-7">
                        <select asp-for="SupplierId" asp-items="@ViewBag.Suppliers" class="border-0 rounded-2 shadow-sm" required>
                        </select>
                    </dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Manufactured</dt>
                    <dd class="col-md-8 col-sm-7"><input asp-for="DateOfManufacture" class="border-0 rounded-2 shadow-sm" required/></dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Unit</dt>
                    <dd class="col-md-8 col-sm-7"><input asp-for="Unit" class="border-0 rounded-2 shadow-sm" required/></dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Price</dt>
                    <dd class="col-md-8 col-sm-7">$<input asp-for="Price" class="border-0 rounded-2 shadow-sm" required/></dd>

                    <dt class="col-md-4 col-sm-5 text-muted fw-semibold">Description</dt>
                    <dd class="col-md-8 col-sm-7">
                        <textarea asp-for="Description" rows="5" class="border-0 rounded-2 shadow-sm w-100"></textarea>
                    </dd>
                </dl>
            </div>

            <div class="col-md-5 d-flex align-items-center justify-content-center">
                <div class="border-0" style="width:100%; max-width:250px; aspect-ratio:1/1; position: relative;">
                    <img id="preview" src="/images/products/@Model.ImageUrl"
                         class="w-100 h-100 object-fit-cover" />
                    <input type="file" name="file" accept="image/*" onchange="showPreview(event)" />
                </div>
            </div>
        </div>
        <div class="text-start">
            <a href="/dashboard/product" class="btn btn-secondary">Cancel</a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </button>
            <button class="btn btn-primary" id="btn-save">Save</button>
        </div>
    </form>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Do you want to delete this product?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-end">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="/dashboard/product/delete/@Model.ProductId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            $('#category-select').val('@Model.CategoryId');
            $('#supplier-select').val('@Model.SupplierId');

            function showPreview(event) {
                const file = event.target.files[0];
                if(!file) return;

                const reader = new FileReader();

                reader.onload = function(e) {
                    $('#preview').attr('src', e.target.result);
                }

                reader.readAsDataURL(file);
            }

        @if (TempData["message"] != null)
        {
                    <text>
                    alert('@TempData["message"]');
                    </text>
        }
    </script>
}