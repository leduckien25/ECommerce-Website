@model IEnumerable<Product>


<div class="container">
    <div class="text-end m-3">
        <a href="/dashboard/product/add" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

    <div class="card border-0 shadow">
        <div class="card-header">
            Products
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>Product ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Supplier</th>
                        <th>Unit</th>
                        <th>Price</th>
                        <th>Manufactured</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr class="product-row" data-id="@product.ProductId">
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.Category.CategoryName</td>
                            <td>@product.Supplier.SupplierName</td>
                            <td>@product.Unit</td>
                            <td>@product.Price</td>
                            <td>@product.DateOfManufacture.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-center">
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item" id="li-@i">
                        <a class="page-link" href="/dashboard/product/index/@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
   <script>
       $('#li-@ViewBag.CurrentPage').addClass('active');

       $('.product-row').hover(function(){
             $(this).css('background-color','#f8f9fa')
        }, function(){
             $(this).css('background-color','')
        });

        $('.product-row').on('click', function(){
            var productId = $(this).data('id');

             window.location.href = '/dashboard/product/details/' + productId;
        });

         @if (TempData["message"] != null)
         {
            <text>
            alert('@TempData["message"]');
            </text>
         }
   </script>
}