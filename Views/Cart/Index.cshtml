@model Cart
@{
    var totalPrice = Model.CartItems.Sum(item => item.Product.Price * item.Quantity);
    var discount = (totalPrice.GetValueOrDefault() * 0.15m);
    var total = totalPrice.GetValueOrDefault() - discount;
}

<div class="container-fluid py-5">
    <div class="container py-5">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model?.CartItems != null)
                    {
                        foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img src="/images/products/@item.Product.ImageUrl" class="img-fluid me-5 rounded-circle"
                                            style="width: 80px; height: 80px;" alt="">
                                    </div>
                                </th>
                                <td>
                                    <a href="/product/details/@item.ProductId">
                                        <p class="mb-0 mt-4">@item.Product.ProductName</p>
                                    </a>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@item.Product.Price $</p>
                                </td>
                                <td>
                                    <input type="number" class="text-center w-25 mt-4 border-0 shadow-sm bg-white"
                                        value="@item.Quantity" readonly>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@(item.Product.Price* item.Quantity) $</p>
                                </td>
                                <td>
                                    <a class="btn btn-md rounded-circle bg-light border mt-3"
                                        href="/cart/delete/@item.CartItemId">
                                        <i class="fa fa-times text-danger"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">
                                No items in cart.
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart Total</h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal</h5>
                            <p class="mb-0">$@totalPrice</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Discount</h5>
                            <div class="">
                                <p class="mb-0">$@discount.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4">$@total.ToString("F2")</p>
                    </div>
                    <a class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4"
                        href="/cart/checkout">Proceed Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>