@model Order

<div class="container mt-5 text-center">
    <h1 class="text-success">🎉 Order Successful!</h1>
    <p>Thank you for your purchase.</p>

    <div class="card mt-4 p-4 shadow">
        <h4>Order Details</h4>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Total:</strong> $@($"{Model.TotalAmount:F0}")</p>
        <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
    </div>

    <a href="/" class="btn btn-primary mt-3">Continue Shopping</a>
</div>
