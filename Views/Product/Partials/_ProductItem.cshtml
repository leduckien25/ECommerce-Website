@model ProductViewModel
<div class="col-md-6 col-lg-6 col-xl-4 mb-4">
    <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">

        <!-- Product Image -->
        <a href="/product/details/@Model.ProductId" class="text-decoration-none text-dark">
            <div class="position-relative">
                <img src="/images/products/@Model.ImageUrl"
                     class="card-img-top img-fluid"
                     alt="@Model.ProductName"
                     style="height: 220px; object-fit: cover;">

                <!-- Category Badge -->
                <span class="badge bg-secondary position-absolute"
                      style="top: 10px; left: 10px;">
                    @Model.CategoryName
                </span>
            </div>
        </a>

        <!-- Product Info -->
        <div class="card-body d-flex flex-column">
            <a href="/product/details/@Model.ProductId" class="text-decoration-none text-dark">
                <h5 class="card-title">@Model.ProductName</h5>
            </a>

            <div class="mt-auto d-flex justify-content-between align-items-center">
                <p class="fs-5 fw-bold mb-0 text-success">
                    $@Model.Price
                </p>
                <a asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-productId="@Model.ProductId"
                   asp-route-quantity="1"
                   class="btn btn-outline-primary btn-sm rounded-pill">
                    <i class="fa fa-shopping-bag me-1"></i> Add to cart
                </a>

            </div>
        </div>
    </div>
</div>
