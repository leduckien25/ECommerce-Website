
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-lg-12">
            <div class="row g-4">
                <div class="col-lg-3">
                    @Html.Partial("~/Views/Shared/Partials/_CategoryList.cshtml", (IEnumerable<CategoryViewModel>)ViewBag.Categories)
                    @Html.Partial("~/Views/Shared/Partials/_SupplierList.cshtml", (IEnumerable<SupplierViewModel>)ViewBag.Suppliers)
                </div>
                <div class="col-lg-9">
                    @Html.Partial("~/Views/Product/Partials/_ProductList.cshtml", (IEnumerable<ProductViewModel>)ViewBag.Products)
                    <ul class="pagination justify-content-center" id="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/product/index/@i">@i</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $($("li.page-item")[@ViewBag.CurrentPage - 1]).addClass("active");
    </script>
}